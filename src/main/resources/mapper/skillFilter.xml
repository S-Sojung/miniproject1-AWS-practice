<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="shop.mtcoding.miniproject.model.SkillFilterRepository">

    <select id="findAll" resultType="shop.mtcoding.miniproject.model.SkillFilter">
        select * from skill_filter_tb
    </select>

    <select id="findById" resultType="shop.mtcoding.miniproject.model.SkillFilter">
        select * from skill_filter_tb where id = #{id}
    </select>


    <select id="findSkillNameForPerson" resultType="shop.mtcoding.miniproject.model.SkillFilter">
        select * from skill_filter_tb where skill in ( #{skill} ) and resume_id = 0
    </select>

    <select id="findSkillNameForCompany" resultType="shop.mtcoding.miniproject.model.SkillFilter">
        select st.id, st.resume_id, st.skill
        from skill_filter_tb st
        join resume_tb rt 
        on st.resume_id = rt.id
        where skill in ( #{skill} )
        and st.post_id = 0
        and rt.publish = true
    </select>

    <select id="findByResumeId" resultType="shop.mtcoding.miniproject.model.SkillFilter">
        select * from skill_filter_tb where resume_id = #{resumeId}
    </select>


    <insert id="insert">
        insert into skill_filter_tb (skill, post_id, resume_id) 
            values(#{skill}, #{postId}, #{resumeId})
    </insert>

    <delete id="deleteById">
        delete from skill_filter_tb where id = #{id} 
    </delete>

    <delete id="deleteByResumeId">
        delete from skill_filter_tb where resume_id = #{resumeId} 
    </delete>

    <delete id="deleteByPostId">
        delete from skill_filter_tb where post_id = #{postId} 
    </delete>

    <update id="updateById">
        update skill_filter_tb set skill = #{skill},
                                   post_id = #{postId},
                                   resume_id = #{resumeId}
                                   where id = #{id} 
    </update>
</mapper>
